import os
import debconf
import shutil

from common import system

def deep_umount(target):
    paths = []
    for mount in file("/proc/mounts", 'r').readlines():
        path = mount.split()[1]
        if path.startswith(target):
            paths.append(path)

    paths.sort(reverse=True)
    for path in paths:
        try:
            system("umount -f %s" % path)
        except:
            pass

def reboot():
    template = 'di-live/reboot_now'

    debconf.runFrontEnd()
    db = debconf.Debconf()

    try:
        db.capb('backup')
        db.input(debconf.HIGH, template)
        db.go()
    except debconf.DebconfError as exc:
        status, msg = exc
        if status != 30:
            raise

    cmd = []
    fgvt = os.environ.get("FGVT")
    if fgvt:
        cmd.append("chvt %s" % fgvt)

    if db.getBoolean(template):
        cmd.append("systemctl reboot")

    db.reset(template)

    if cmd:
        system("; ".join(cmd))

def main():
    deep_umount('/target')
    file('/tmp/.di-live-finalize', 'w').write('')
    reboot()


if __name__ == "__main__":
    main()

